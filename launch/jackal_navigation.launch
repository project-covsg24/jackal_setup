<launch>
  <!-- Arguments -->
  <arg name="map_file" default="$(find jackal_setup)/maps/3rd_floor.yaml"/>
  <arg name="move_forward_only" default="false"/>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find jackal_setup)/launch/amcl.launch"/>

  <!-- move_base -->
  <include file="$(find jackal_setup)/launch/move_base.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- rviz -->
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find jackal_setup)/config/navigation.rviz"/>
</launch>
